<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:id="@+id/ll"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                
                android:id="@+id/manufactur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufactur:\n" />

            <TextView
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                
                android:id="@+id/ModelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ModelName:\n" />

            <TextView
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                
                android:id="@+id/ModelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ModelNumber:\n" />

            <TextView
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                
                android:id="@+id/Ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ram:\n" />

            <TextView
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                
                android:id="@+id/AndroidVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AndroidVersion:\n" />

            <TextView
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                
                android:id="@+id/Battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery:\n" />

            <TextView
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                
                android:id="@+id/CameraMegaPixel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CameraMegaPixel:\n" />

            <TextView
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                
                android:id="@+id/CameraAperture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CameraAperture:\n" />



            <TextView
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                
                android:id="@+id/storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage:\n" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensors"
                android:layout_gravity="center"
                android:id="@+id/sensor"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>



    </LinearLayout>

        <TextView
            android:id="@+id/gpu_txt"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"

            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPU Information:\n" />

        <TextView
            android:id="@+id/gpu_data"
            android:textColor="@color/black"
            android:textSize="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cpu_txt"
            app:layout_constraintTop_toBottomOf="@id/gpu_txt"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPU Information:\n" />


    <TextView
        android:id="@+id/cpu_txt"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gpu_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Processor (CPU) Information:\n" />

    <TextView
        android:id="@+id/cpu_data"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cpu_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Processor (CPU) Information:\n" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>